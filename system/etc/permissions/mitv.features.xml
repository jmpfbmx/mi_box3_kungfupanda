<permissions>
    <!--usb slot for host-->
    <feature name="mitv.hardware.usb.host.slot" />
    <!--pppoe-->
    <feature name="mitv.network.pppoe" />
    <!--支持4K片源解码-->
    <feature name="mitv.media.4k" />
    <!--支持4K片源输出-->
    <feature name="mitv.display.4k" />
    <!--wifi wol-->
    <feature name="mitv.network.wol.wifi" />
    <!--标配语音遥控器-->
    <feature name="mitv.hardware.voicerc.default" />
    <!--标配蓝牙遥控器-->
    <feature name="mitv.hardware.btrc.default" />
    <!--安装apk到U盘-->
    <feature name="mitv.udisk.install.apk" />
</permissions>
